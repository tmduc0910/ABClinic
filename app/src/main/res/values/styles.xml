<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //upload
    <style name="description" parent="android:Widget.EditText">
        <item name="android:color">#000000</item>
        <item name="android:strokeColor">#000000</item>
        <item name="android:scaleWidth">1dp</item>
        <item name="android:padding">7dp</item>
    </style>
    <style name="MyEditTextStyle1" parent="android:Widget.TextView">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    //profile
    <style name="profile" parent="android:Widget.TextView">
        <item name="android:textColor">#03A9F4</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableTint">#03A9F4</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="edit_profile" parent="android:Widget.EditText">
        <item name="android:textColor">#000</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableTint">#C0C0C0</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
